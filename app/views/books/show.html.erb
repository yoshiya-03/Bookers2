<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<%= render 'books/list', book: @newbook, user: @user %>
		</div>

		 <div class="col-md-8 offset-md-1">
		 	 <h3>Book detail</h3>
		 		<table class="table table-hover">
		  		<tr>
						<td>
          		<a><%= link_to  user_path(@user.id) do %>
           		  <%= attachment_image_tag @user, :profile_image, class: "img-thumbnail", fallback: "no-image.png", size: "60x60" %>
            		  <br>
             	  <%= link_to @user.name, user_path(@user.id) %>
            		<% end %></a>
						</td>
						<td><%= link_to @book.title %></td>
						<td><%= @book.body %></td>
						<td>
           	 	<% if @book.user_id == current_user.id %>
					    	<%= link_to "Edit", edit_book_path(@book.id) ,class:"btn-sm btn-success" %>
					    	<%= link_to "Destroy", book_path(@book.id), method: :delete,  "data-confirm" => "本当に消しますか？"  ,class:"btn-sm btn-danger destroy_book_10349"%>
				    	<% end %>
				    		<% if current_user.already_favorited?(@book) %>
					        <%= link_to  book_favorites_path(@book), method: :delete do %>
					         <i class="fas fa-heart unlike-btn"></i>
					      <% end %>
					      <% else %>
					        <%= link_to  book_favorites_path(@book), method: :post do %>
					         <i class="fas fa-heart like-btn"></i>
					      <% end %>
					      <% end %>
					      <%= @book.favorites.count  %>

					      <td>コメント数：<%= @book.book_comments.count %></td>
        <% if @book.user == current_user %>
          <td>
            <%= link_to 'Edit', edit_book_path(@book), class:'btn btn-success btn-xs' %>
          </td>
          <td>
            <%= link_to 'Destroy', book_path(@book), method: :delete, data: {confirm: '本当に消しますか?'}, class:'btn btn-danger btn-xs' %>
          </td>
        <% end %>
      </tr>
    </table>
    <div>

    <table class="table">
    <% @book.book_comments.each do |book_comment| %>
        <tr>
          <td>
            <%= attachment_image_tag book_comment.user, :profile_image, :fill, 40, 40, fallback:'no-image.png', size:'40x40' %>
            <br>
            <%= link_to book_comment.user.name %>
          </td>
          <td><%= book_comment.comment %></td>
          <% if book_comment.user == current_user %>
            <td><%= link_to 'Destroy', book_book_comments_path(@book.id, book_comment.id), method: :delete ,class:"btn-sm btn-danger" %></td>
          <% else %>
            <td></td>
          <% end %>
        <tr>
      <% end %>
      
      </table>
        <%= form_with(model: [@book, @book_comment], local: true) do |form| %>
		  <div class="field">
		    <%= form.label :content%>
		      <%= form.text_area :comment, rows:'5', class: "form-control" %>
		  </div>
		  <br>
	       <%= form.submit "送信", class: "btn btn-primary d-flex align-items-end" %>
		<% end %>

    </div>
  </div>
</div>