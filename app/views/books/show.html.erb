<div class="row">

  <%= render 'books/list', user: current_user, books: @books %>

   <div class= "col-xs-9">
    <h2>Book detail</h2>
    <table class='table' >
    <tr>
    <td>
      <%= link_to user_path(@book.user_id) do %>
        <%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, fallback: "no-image.png",size:'50x50',format: 'no-image.png' %>
         <nav>
           <%= @book.user.name %>
         </nav>
       <% end %>
    </td>
    
    <td><%= link_to @book.title %></td>
    <td><%= @book.body %></td>
      <% if @book.user_id == current_user.id %>
        <td><%= link_to"edit", edit_book_path(@book.id),class:"btn-sm btn-success" %></td>
        <td><%= link_to "destroy", book_path(@book.id), class:"btn-sm btn-danger destroy(@book.id)", method: :delete,data: {confirm: "本当に消しますか？"} %></td>
      <% end %>
    </tr>
    </table>
  </div>
</div>
