<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

    <% if @book.errors.any? %>
      <%= @book.errors.count %> errors prohibited this obj from being saved:
      <% @book.errors.full_messages.each do |message| %>
      <%= message %>
      <% end %>
    <% end %>


<div class="container">
  <div class="row">

  <div class="col-md-3">
      <%= render 'books/list', book: @book, user: current_user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h3>Books</h3>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to  user_path(book.id) do %>
              <%= attachment_image_tag book.user, :profile_image, class: "img-thumbnail", fallback: "no-image.png", size: "60x60" %>
            <% end %>
            </td>
              <td>
                <%= link_to book.title, book_path(book)  %>
              </td>
              <td>
                <%= book.body %>

              <td>
					      <% if current_user.already_favorited?(book) %>
					        <%= link_to  book_favorites_path(book), method: :delete do %>
					         <i class="fas fa-heart unlike-btn"></i>
					      <% end %>
					      <% else %>
					        <%= link_to  book_favorites_path(book), method: :post do %>
					          <i class="fas fa-heart like-btn"></i>
					      <% end %>
					      <% end %>
					      <%= book.favorites.count  %>
					</td>

				
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>