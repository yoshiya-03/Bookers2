<div class="container">
  <div class="row">
    
    
    <div class="col-xs6 col-md-offset-3">
      <h1>Editing Book</h1>
        <% if @book.errors.any? %>
          <%= @book.errors.count %>件のerrorが発生しました
          <% @book.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>
      
      
    <%= form_with model: @book, local:true do |f| %> 
       <div class="field">
          <label for="book_title">Title</label><br>
          <%= f.text_field :title, class: "col-xs-12 book_title"%>
        </div>
        <div class="field">
          <label for="book_body">Opinion</label><br>
          <%= f.text_area :body, class: "col-xs-12 book_body" %>
          <br>
        </div>
        <div class="field">
          <%= f.submit "Update Book" ,class: "btn btn-success col-xs-12" %></div>
          <br>
      <% end %>
      　<%= link_to 'Show', book_path %>
      ｜
      　<%= link_to 'Back', books_path  %>
    </div>
  </div>
</div>