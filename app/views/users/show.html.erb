<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'books/list', book: @book, user: @user %>
    </div>
    
    
    <div class="col-xs-9">
      <h3>Books</h3>
      <table class="table table-hover table-inverse">
        <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
        </thead>
        
        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
           <%= link_to  user_path(@user.id) do %>
                <%= attachment_image_tag @user, :profile_image, class: "img-circle pull-left profile-thumb", fallback: "no-image.png", size: "60x60" %></td>
              <% end %>
              </td>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.body %></td>
        <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>