<div class="row"> 
  <%= render 'books/list', user: current_user, book: @book %>

  <div class="col-xs-9">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    <tbody>
       <% @user.books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(@user) do %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "attachment user profile_image", fallback: "no-image.png", size: '50x50' %>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>