<h1>New Book</h1>

<%= form_with model: @book, local:true do |f| %>
  <h5>Title</h5>
  <%= f.text_field :title %>
  <h5>Opinion</h5>
  <%= f.text_area :body %>
  <br>
  <%= f.submit 'Create Book' %>
<% end %>

<div class="col-md-8 offset-md-1">
<table class="table">
<h1>Users</h1>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th colspan="8"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.profile_image  %></td>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user_path(user.id) %></td>
      </tr>
    <% end %>
    </div>
  </tbody>
</table>

