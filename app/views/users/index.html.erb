<div class="row">   

  <%= render 'books/list', user: current_user, book: @book %>

  <div class="col-md-9">
    <h1>Users</h1>
      <div class="container">
        <table class="table">
          <thead>
            <tr>
              <th>Image</th>
              <th>Name</th>
              <th colspan="8"></th>
            </tr>
          </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image,  format: 'jpeg', fallback: "no-image.png",  size: "60x60" %><td>
              <td><%= user.name %></td>
              <td><%= link_to 'Show', user_path(user.id) %></td>
            </tr>
          <% end %>
        </div>
      </div>
    </tbody>
  </table>
</div>
