<h2>User Info</h2>
<%= form_with model:@user, local:true do |f| %>
 
  <f.label for="user_name">Name</label>
  <br>
   <%= f.text_field :name, class:"name", id:"user_name" %>
 
  <f.label for="user_image">Image</label>
  <%= f.attachment_field :profile_image, placeholder:"ファイルを選択", class:"user_image", id:"user_profile_image" %>
 
 
   <f.label for="user_introduction">Introduction</label>
   <br>
   <%= f.text_area :introduction, class:"introduction", id:"user_introduction" %>
  <br>
    <%= f.submit "Update User" %>
<% end %>