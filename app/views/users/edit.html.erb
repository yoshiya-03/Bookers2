<h2>User Info</h2>
<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_with model:@user, local:true do |f| %>
 
  <f.label for="user_name">Name</label>
  <br>
   <%= f.text_field :name, class:"name", id:"user_name" %><br>
  <br>
  <f.label for="user_image">Image</label><br>
  <%= f.attachment_field :profile_image, placeholder:"ファイルを選択", class:"user_image", id:"user_profile_image" %>
  <br>
  <br>
   <f.label for="user_introduction">Introduction</label>
   <br>
   <%= f.text_area :introduction, class:"introduction", id:"user_introduction" %>
  <br>
    <%= f.submit "Update User",class: "btn btn-secondary btn-lg" %>
<% end %>