<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/6c4c9f280d.js" crossorigin="anonymous"></script>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <span>Bookers</span>
      <nav class="navbar  navbar-light">
        <div class="container">
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
           <span class="navbar-toggler-icon"></span>
          </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">

          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li class="nav-item"><%= link_to " Home", user_path(current_user), class: "glyphicon glyphicon-home home" %></li>
              <li class="nav-item"><%= link_to " Users", users_path, class: "glyphicon glyphicon-user users" %></li>
              <li class="nav-item"><%= link_to " Books", books_path, class: "glyphicon glyphicon-book books" %></li>
              <li class="nav-item"><%= link_to " logout", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out logout" %></li>
            <% else %>
              <li class="nav-item"><%= link_to " Home", root_path, class: "glyphicon glyphicon-home home" %></li>
              <li class="nav-item"><%= link_to " About", home_about_path, class: "glyphicon glyphicon-link about" %></li>
              <li class="nav-item"><%= link_to " sign up", new_user_registration_path, class: "glyphicon glyphicon-edit sign_up" %></li>
              <li class="nav-item"><%= link_to " login", new_user_session_path, class: "glyphicon glyphicon-log-in sign_in" %></li>
            <% end %>
          </ul>
          </div>
        </div>
        </nav>
    </header>

        <%= yield %>

      </div>
    </div>

    <footer>
      <div class="container">
        <div class="row">
          <div class="col-xs-3 col-xs-offset-9">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>